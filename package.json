{
  "name": "@spore/tskit",
  "version": "0.0.2",
  "description": "TypeScript 基础工具组件库",
  "main": "index.js",
  "scripts": {
    "vuepress-dev": "vuepress dev docs",
    "vuepress-build": "vuepress build docs",
    "doc-build": "documentation build ./src/index.ts -f md -o ./docs/docs.md --markdown-toc false --np",
    "doc": "npm run test && npm run doc-build && npm run vuepress-build",
    "prepublishOnly": "npm run build",
    "test": "jest --coverage ./test/unit",
    "lint": "eslint ./src",
    "cz": "git add . && git cz"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SporeUI/spore-tskit.git"
  },
  "bugs": {
    "url": "https://github.com/SporeUI/spore-tskit/issues"
  },
  "homepage": "https://github.com/SporeUI/spore-tskit#readme",
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "commitizen": "^4.2.4",
    "conventional-changelog-cli": "^2.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "documentation": "^13.2.5",
    "eslint": "^8.0.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.1",
    "eslint-plugin-no-for-of-loops": "^1.0.1",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.3",
    "typescript": "^4.4.4",
    "vuepress": "^1.8.2"
  },
  "lint-staged": {
    "src/**/*.js": "eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "./hooks/pre-commit.sh && lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "author": "pillar0514@gmail.com",
  "license": "MIT"
}
